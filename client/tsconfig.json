{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "moduleDetection": "force",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}

